 #include<iostream>
#include<math.h>
using namespace std;

void patt(int n){

    // for(int r=1 ; r<=n ; r++){
        
    //     for(int s=1 ; s<=r ; s++){
    //         cout<<"*";
    //     }
    //     cout<<endl;
        
    // }
    // for(int r=1 ; r<=n-1 ; r++){
    //     for(int s=1 ; s<=n-r ; s++){
    //         cout<<"*";
    //     }
    //     cout<<endl;
    // }
    
    
    for(int r=1 ; r<=(2*n-1) ; r++){
        int star=r;
        if(r>n) star=2*n-r;
        for(int s=1 ; s<=star ; s++){
            cout<<"*";
        }
        cout<<endl;
    }
    
}

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}

11. 
 #include<iostream>
#include<math.h>
using namespace std;

void patt(int n){

    for(int r=1 ; r<=n ; r++){
        for(int s=1 ; s<=r ; s++){
            if((r%2==1)&&(s%2==1)){
                cout<<"1";
            }
            else if((r%2==0)&&(s%2==0)){
                cout<<"1";
            }
            else cout<<"0";
            }
            cout<<endl;
        }
    }

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}

12. #include<iostream>
#include<math.h>
using namespace std;

void patt(int n){

    for(int r=1 ; r<=n ; r++){
        for(int c=1 ; c<=r ; c++){
            cout<<c;
        }
        for(int space=1 ; space<=(2*n-2*r) ; space++){
            cout<<" ";
        }
        for(int c=r ; c>=1 ; c--){
            cout<<c;
        }
        cout<<endl;
    }
}

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}

13. #include<iostream>
#include<math.h>
using namespace std;

void patt(int n){
    int p=1;
for (int r=1 ; r<=n ; r++){
        for( int s=1 ; s<=r ; s++){
            cout<<p<<" ";
            p = p+1;
        }
        cout<<endl;
    }
}

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}

14. 
#include<iostream>
#include<math.h>
using namespace std;

void patt(int n){

    for(int r=1 ; r<=n ; r++){
        char ch = 'A';
        for(int s=1 ; s<=r ; s++){
            cout<<ch;
            ch++;
        }
        cout<<endl;
        
    }

}

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}

15. 
#include<iostream>
#include<math.h>
using namespace std;

void patt(int n){

    for(int r=1 ; r<=n ; r++){
        char ch = 'A';
        for(int s=1 ; s<=n-r-1 ; s++){
            //for question14. we used s<=r , for Q. 15 we used s<=n-r-1
            cout<<ch;
            ch++;
        }
        cout<<endl;
        
    }

}

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}

