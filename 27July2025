5. #include<iostream>
using namespace std;

void patt(int n){
for(int rownumber=0; rownumber<n ; rownumber++){
	for(int colnumber=0; colnumber<=((n-1)-rownumber) ; colnumber++){
		cout<<"*";
}
cout<<endl;
}

}

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}

