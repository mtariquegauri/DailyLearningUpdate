7. #include<iostream>
#include<math.h>
using namespace std;

void patt(int n){


for(int rownumber=0 ; rownumber<n ; rownumber++){
	for(int colnumber=0 ; colnumber<n-(rownumber+1); colnumber++){
		cout<<" ";
	}
        
	for(int i=0 ; i<(2*rownumber+1);i++){
	cout<<"*";
        }

        for(int colnumber=0 ; colnumber<n-(rownumber+1); colnumber++){
		cout<<" ";
	}

cout<<endl;	

}
}

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}

8. #include<iostream>
#include<math.h>
using namespace std;

void patt(int n){

for(int rownumber=0; rownumber<n ; rownumber++){

	for(int colnumber=0 ; colnumber<rownumber ; colnumber++){
		cout<<" ";
	}
	
//  	for(int i=2*(n-(rownumber+1))+1 ; i>0 ; i--){
//  		cout<<"*";

for(int i=0 ; i<2*(n-(rownumber+1))+1;i++){
    cout<<"*";
}
cout<<endl;
}


}

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}


