10.
 #include<iostream>
#include<math.h>
using namespace std;

void patt(int n){

    // for(int r=1 ; r<=n ; r++){
        
    //     for(int s=1 ; s<=r ; s++){
    //         cout<<"*";
    //     }
    //     cout<<endl;
        
    // }
    // for(int r=1 ; r<=n-1 ; r++){
    //     for(int s=1 ; s<=n-r ; s++){
    //         cout<<"*";
    //     }
    //     cout<<endl;
    // }
    
    
    for(int r=1 ; r<=(2*n-1) ; r++){
        int star=r;
        if(r>n) star=2*n-r;
        for(int s=1 ; s<=star ; s++){
            cout<<"*";
        }
        cout<<endl;
    }
    
}

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}
