#include<iostream>
// #include<bits/stdlibc++.h>

using namespace std;

void patt(int n){
for(int rownumber=0; rownumber<n ; rownumber++){
	for(int colnumber=0 ; colnumber<=rownumber ; colnumber++){
		cout<<"*";
	}
	cout<<endl;
}
}

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}


