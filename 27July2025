7. #include<iostream>
#include<math.h>
using namespace std;

void patt(int n){


for(int rownumber=0 ; rownumber<n ; rownumber++){
	for(int colnumber=0 ; colnumber<n-(rownumber+1); colnumber++){
		cout<<" ";
	}
        
	for(int i=0 ; i<(2*rownumber+1);i++){
	cout<<"*";
        }

        for(int colnumber=0 ; colnumber<n-(rownumber+1); colnumber++){
		cout<<" ";
	}

cout<<endl;	

}
}

int main(){
    int n;
    cin>>n;
    patt(n);
    return 0;
}

